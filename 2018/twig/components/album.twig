{% extends 'layouts/main.twig' %} {% block content %}
<!-- APEC -->
<style>
.owl-carousel .owl-wrapper {
    display: flex !important;
}
.single-carousel.owl-carousel .owl-item {
    height: 150px !important;
}
.owl-carousel .owl-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    max-width: initial;
}
</style>
<header class="header">
    <div class="container">
        <div class="owl-carousel banner-carousel">
            <div class="item thumbnail">
                <img class="img-responsive" src="/img/album/groupphoto_2018.jpg" alt="2018合照" />
                <div class="caption">
                    <h2 class="text-white">MOPCON 2018</h2>
                </div>
            </div>
            <div class="item thumbnail">
                <img class="img-responsive" src="/img/album/groupphoto_2017.jpg" alt="2017合照" />
                <div class="caption">
                    <h2 class="text-white">MOPCON 2017</h2>
                </div>
            </div>
            <div class="item thumbnail">
                <img class="img-responsive" src="/img/album/groupphoto_2016.jpg" alt="2016合照" />
                <div class="caption">
                    <h2 class="text-white">MOPCON 2016</h2>
                </div>
            </div>
            <div class="item thumbnail">
                <img class="img-responsive" src="/img/album/groupphoto_2015.jpg" alt="2015合照" />
                <div class="caption">
                    <h2 class="text-white">MOPCON 2015</h2>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="panel bottom">
    <div class="container">
    {% for item in album %}
        <h3 class="page-title text-center">{{item.year}}</h3>
        <div class="row mb-3">
            {% for cate in item.category %}
            <div class="col-md-3 mb-3">
                <a class="d-block" target="_blank" href="{{cate.link}}">
                    <span class="owl-carousel single-carousel mb-2">
                        {% for photo in cate.photos %}
                        <img class="img-responsive" src="/img/album/{{photo.src}}" alt="{{photo.fileName}}" />
                        {% endfor %}
                    </span>
                    <p class="h5 text-white text-center">{{cate.title}}</p>
                </a>
            </div>
            {% endfor %}
