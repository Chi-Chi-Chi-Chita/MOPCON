{% extends 'main.twig' %}

{% block content %}
<header class="header text-center">
	<div class="header_mainVisual">
		<div class="mainVisualPic"></div>
	</div>
	<div class="header_btnGroup">
		<a href="https://goo.gl/nLFsPQ" target="_blank" class="btn btn-default">{{ index.call_sponsor }}</a>
		<a href="https://mopcon.kktix.cc/events/mopcon2017-cfr-2" target="_blank" class="btn btn-default">{{ index.call_recomm }}</a>
		{% if lang == 'zh' %}
			<a href="https://mopcon.kktix.cc/events/mopcon2017-cfp-2" target="_blank" class="btn btn-default">議程投稿</a>
		{% endif %}
	</div>
</header>
<!-- lookback -->
<section class="lookback">
	<a href="https://www.flickr.com/photos/mopcon/albums/" target="_blank" class="lookback_content">
		<div class="btn btn-default">{{ index.review_2016 }}</div>
		<img src="images/lookback-img.png" alt="精彩回顧照片">
	</a>
</section>
<!-- about -->
<section class="about container">
	<div class="title">
		<div class="title_en">
			ABOUT
			<br>
			MOPCON 2017
		</div>
		<div class="title_ch">
			{{ index.spirit }}
		</div>
		<div class="title-deco-dot"></div>
	</div>
	<div class="content content-post">
		<p>
			{{ index.spirit_slogan_1 }}
		</p>
		<p>
            {{ index.spirit_slogan_2 }}
		</p>
	</div>
</section>

<!-- schedule -->
<section class="schedule">
	<div class="schedule_deco"></div>
	<div class="schedule_content">
		<div class="container">
			<div class="title">
				<div class="title_ch">
					{{ index.schedule }}
				</div>
			</div>
			<div class="content content-post">
				<p>{{ index.Schedule_slogan }}
				</p>
				<br>
				<br>
		        {% if lang == 'zh' %}
				    <a href="https://mopcon.kktix.cc/events/mopcon2017-cfp-2" target="_blank" class="btn btn-primary btn-lg align-table">
                {% else %}
				    <a href="https://mopcon.kktix.cc/events/mopcon2017-cfp-eng" target="_blank" class="btn btn-primary btn-lg align-table">
                {% endif %}
					<!--SEE Full Schedule-->
					{{ index.cfp }}
				</a>
			</div>
		</div>
	</div>
	<div class="schedule_deco reverse"></div>
</section>

<!-- position -->
<section class="position">
	<div class="title text-center">
		<div class="title-twiDot">
			WHERE
		</div>
		<h2 class="title-twiDot-h2">
			{{ index.how_to_get_here }}
		</h2>
	</div>
	<div class="position_content">
		<div class="position_content_box col-lg-6 col-lg-push-3 t col-md-6 col-md-push-3 col-sm-8 col-sm-push-2 text-center">
			<h2 class="h2">{{ index.location }}</h2>
			<h3 class="h3">{{ index.address }}</h3>
			<div class="post-dot"></div>
			<h4 class="h4">{{ index.bus }}</h4>
			<p class="post">{{ index.bus_number }}</p>
			<div class="post-dot"></div>
			<h4 class="h4">{{ index.other_transp }}</h4>
			<p class="post">1.{{ index.route_1 }}
				<br>
				2.{{ index.route_2 }}
				<br>
				3.{{ index.route_3 }}
			</p>
		</div>
		<div class="position_map"></div>
	</div>
	<div class="panel-deco-slash"></div>
</section>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBd8NcCu9BqXZch7AL73UF7huLl-SKIDfU&callback=initMap"
		async defer></script>
<script type="text/javascript">
function initMap() {
    var position = {lat: {{ map.lat }}, lng: {{ map.lng }}};
    map = new google.maps.Map(document.querySelector('.position_map'), {
        center: position,
        zoom: {{ map.zoom }},
        scrollwheel: false
    });

    var marker = new google.maps.Marker({
        position: position,
        map: map
    });
}
</script>
{% endblock %}
