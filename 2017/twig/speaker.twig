{% extends 'main.twig' %} {% block content %}
<!-- header  -->
<section class="pageHead">
    <img src="images/headPage-speakers.svg" alt="講者標題圖片">
</section>
<!-- speaker -->
<section class="container">
{% for id, data in speakers %}
    <div class="content-radius clearfix">
        <div class="row">
            <h3 class="h3 col-lg-12">{{data['name']}}</h3>
            <div class="col-lg-3 col-md-3 col-sm-3">
                <div class="pic pic-cycle" style="background-image:url({{ data['picture'] }});">
                </div>
            </div>
            <div class="col-lg-9 col-md-9 col-sm-9">
                <p>
                    {{data['info']}}
                </p>
                <a href="speakerDetail.php?speaker={{loop.index}}" class="btn btn-detail">{{ index['more_info'] }}</a>
            </div>
        </div>
    </div>
    <br>
{% endfor%}

</section>
{% endblock %}