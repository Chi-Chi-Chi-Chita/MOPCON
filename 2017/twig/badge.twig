<script>
    var records = JSON.parse(window.localStorage.getItem('records') || '[]'),
        newBadge = getParameterByName('new_badge'),
        loggedIn = false,
        badgeData;

    window.onload = function () {
        $('.navbar').hide();
        $('.footer').hide();
        $('.floater_content').hide();

        getSpreadsheetData('1kPErWc-YaMy-C3PPjJ4XtJZRQrX0pf1DZN_5wV08tOc', function (err, rows) {
            // if (err) return swal('無法取得徽章資料！').then(function () {
            //     location.href = 'index.html';
            // });
            var fill = rows.length % 3 === 0 ? 0 : 3 - rows.length % 3;
            Array.from({length: fill}).forEach(x => {
                rows.push({id: ''});
            });

            badgeData = {};

            $('.illustration').append(rows.map(function (data) {
                badgeData[data.id] = data;
                return generateBadge(data.id, data.category, data.cateno);
            }));

            $('.badge-all').text(rows.length);

            init();
        });
    }

    function generateBadge(id, cate, cateno) {
        if (id === '') {
            return $('<div class="badge_icon fillBox"></div>');
        }

        return $('<div id="icon' + id + '" class="badge_icon"><div class="badgePic badge-scale"><img src="images/badge/badge' + pad(cate, 3) + '.png" alt=""></div><div class="badgePic badgeFornt badge-rotatey"><img src="" alt=""></div><div class="badgeCycle badge-opacity"></div></div>');
    }

    function init() {
        var collected = {};

        // records.forEach(function (record) {
        //     if (badgeData[record.badgeId]) {
        //         badgeData[record.badgeId].date = new Date(record.timestamp).toLocaleString();
        //     }
        //     collected[record.badgeId] = true;

        //     var data = badgeData[record.badgeId];
        //     if (newBadge === record.badgeId + '') {
        //         uncover(data.id, data.category, data.cateno);
        //     } else {
        //         open(data.id, data.category, data.cateno);
        //     }
        // });

        $('.badge-collected').text(Object.keys(collected).length);
    }

    function pad(n, width, z) {
        z = z || '0';
        n = n + '';
        return n.length >= width ? n : new Array(width - n.length + 1).join(z) + n;
    }

    function triggerBadge(id) {
        var mod = id % 3;
        var className;

        if (mod === 1) { // left
            className = 'badgeWrapper-left';
        } else if (mod === 2) { // center
            className = 'badgeWrapper';
        } else { // right
            className = 'badgeWrapper-right';
        }

        var badge = badgeData[id];

        $('#icon' + id).addClass(className);
        $('#icon' + id).on('click', function() {
            toggleModal(badge.id, badge.category, badge.cateno);
        });
        $('#icon' + id).find('.badgeFornt').find('img').attr('src', 'images/badge/badge' + pad(badge.category, 3) + '-' + badge.cateno + '.png');
    }

    function scrollToBadge(id) {
        $('html,body').animate({
            scrollTop: $("#icon" + id).offset().top - (screen.height / 2 - 40)
        }, 'slow', function() {
            triggerBadge(id);
        });
    }

    function gotoScan() {
        location.href = 'qrcode.php?type=badge';
    }

    function openDescription() {
        $('#descModal').modal('show');
    }

    function toggleModal(id, category, cateno) {
        // if (!(badgeData[id] && badgeData[id].date)) return;
    
        $('.illustration .badge_icon').removeClass('badgeWrapper-left badgeWrapper badgeWrapper-right');
    
        $('#sponsorModal .modal-title').text(badgeData[id].title);
        $('#sponsorModal .intro').html(badgeData[id].description.replace(new RegExp('\n', 'g'), '<br />'));
        $('#sponsorModal .shareBtn').attr('onclick', 'fbShare(' + id + ')');
        $('#sponsorModal .time').text(badgeData[id].date ? (badgeData[id].date + ' 獲得') : '');
        $('#sponsorModal .logo img').attr('src', 'images/badge/badge' + pad(category, 3) + '-' + cateno + '.png');
    
        $('#sponsorModal').modal('show');
      }

    function fbShare(id) {
        var badge = badgeData[id];

        var url = 'https://www.kkbox.com/tw/tc/index.html';
        var title = 'MOPCON 徽章'
        var description = '「我在ＭＯＰＣＯＮ獲得了一個KKBOX徽章，快來一起搜集換獎品」'; 
        var image = document.location.href.replace('badge.php', '') + 'images/badge/badge' + pad(badge.category, 3) + '-' + badge.cateno + '.png';

        FB.ui({
            method: 'share_open_graph',
            action_type: 'og.shares',
            action_properties: JSON.stringify({
                object: {
                    'og:url': url,
                    'og:title': title,
                    'og:description': description,
                    'og:image': image,
                }
            })
        }, function(response) {});
    }

    function getParameterByName(name, url) {
        if (!url) url = window.location.href;
        name = name.replace(/[\[\]]/g, "\\$&");
        var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
        results = regex.exec(url);
        if (!results) return null;
        if (!results[2]) return '';
        return decodeURIComponent(results[2].replace(/\+/g, " "));
    }
</script>
