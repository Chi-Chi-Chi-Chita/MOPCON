{% extends 'main.twig' %}

{% block content %}
<header class="header text-white text-center">
	<!-- <img src="images/logo_header@2x.png" height="" width="500" alt="" class="img-responsive"> -->
	<div class="circle-logo"></div>
	<h1 class="text-center common-idx">Schdule<br>Of 2015</h1>
</header>

<div class="row text-white text-center ovh">
	<div class="col-xs-6 slash bg-green"></div>
	<div class="col-xs-6 slash bg-deep-blue"></div>
</div>
<div class="row mtm pdreset">
  <div class="col-sm-6 col-xs-12" data-schedule>
  	{% for schedule in schedules.day1 %}
      <div class="col-xs-12 schedule">
      		{% if schedule.timeStart != prvTime; prvTime = schedule.timeStart %}
          <div class="schedule-header"><span>{{ schedule.timeStart }}</span><span> ～ </span><span>{{ schedule.timeEnd }}</span></div>
          {% endif %}

          <div class="schedule-body">
            <div class="schedule-img"><img src="{{ schedule.pic }}" width="100%" alt=""></div>
            <div class="schedule-content">
              <div class="schedule-content-header">
                <h3>{{ schedule.title }}</h3>
                <p>{{ schedule.summary }}</p>

                {% if schedule.issue != "" || schedule.speaker !="" %}
                <div class="slideDown"></div>
                {% endif %}

              </div>
              {% if schedule.room != "" || schedule.type !="" %}
              <div class="schedule-content-footer text-white">
                <div class="schdule-type text-center">
                  <div class="col-xs-6 p0 bg-deep-blue">{{ schedule.room }}</div>
                  {% if schedule.type == '技術'
                        typeClass='bg-pink'
                     elsif schedule.type == '活動'
                        typeClass = 'bg-light-green'
                     elsif schedule.type == '營運'
                        typeClass = 'bg-gray'
                     end
                  %}
                  <div class="col-xs-6 p0 {{ typeClass }}">{{ schedule.type }}</div>
                </div> 
              </div>
              {% endif %}
            </div>
          </div>
          <div class="schedule-footer">
            <h4>議題介紹</h4>
            <p>{{ schedule.issue }}</p> 
            <h4>講者簡介</h4>
            <p>{{ schedule.speaker }}</p> 
          </div>
      </div>
    {% endfor %}
  </div>
  <div class="col-sm-6 col-xs-12 hidden-xs" data-schedule>
    {% for schedule in schedules.day1 %}
      <div class="col-xs-12 schedule">
      		{% if schedule.timeStart != prvTime; prvTime = schedule.timeStart %}
          <div class="schedule-header"><span>{{ schedule.timeStart }}</span><span> ～ </span><span>{{ schedule.timeEnd }}</span></div>
          {% endif %}

          <div class="schedule-body">
            <div class="schedule-img"><img src="{{ schedule.pic }}" width="100%" alt=""></div>
            <div class="schedule-content">
              <div class="schedule-content-header">
                <h3>{{ schedule.title }}</h3>
                <p>{{ schedule.summary }}</p>

                {% if schedule.issue != "" || schedule.speaker !="" %}
                <div class="slideDown"></div>
                {% endif %}

              </div>
              {% if schedule.room != "" || schedule.type !="" %}
              <div class="schedule-content-footer text-white">
                <div class="schdule-type text-center">
                  <div class="col-xs-6 p0 bg-deep-blue">{{ schedule.room }}</div>
                  {% if schedule.type == '技術'
                        typeClass='bg-pink'
                     elsif schedule.type == '活動'
                        typeClass = 'bg-light-green'
                     elsif schedule.type == '營運'
                        typeClass = 'bg-gray'
                     end
                  %}
                  <div class="col-xs-6 p0 {{ typeClass }}">{{ schedule.type }}</div>
                </div> 
              </div>
              {% endif %}
            </div>
          </div>
          <div class="schedule-footer">
            <h4>議題介紹</h4>
            <p>{{ schedule.issue }}</p> 
            <h4>講者簡介</h4>
            <p>{{ schedule.speaker }}</p> 
          </div>
      </div>
    {% endfor %}
  </div>
</div>
{% endblock %}
