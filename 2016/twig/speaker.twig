{% extends 'main.twig' %}

{% block content %}
<header class="header text-center relative"  id="particles-js">
	<div class="planet-logo"></div>
	<div class="header-block">
		<div class="header-logo">
            <img
                src="images/article/home-landing-logo@2x.png"
                srcset="images/article/home-landing-logo@3x.png 2x, images/article/home-landing-logo@3x.png 3x"
                alt="mopcon2016"
                class="img-responsive center-block common-idx">
		</div>
	</div>
</header>
<div class="container-md">
	<div class="card">
		<div class="multi-planet">
			<div class=" card-speaker-title">
				<h3>講者陣容</h3>
				<h4>Speakers</h4>
				<hr class="speaker-hr">
			</div>
			{% for data in speakers %}
			<h3 class="card-head card-gray">
				<a href="#">{{ data.speakerName }}</a>
			</h3>
			<div class="card-body">
				<div class="row">
					<div class="col-sm-3">
						<img src="images/speaker/{{ data.image }}" alt="" class="img-responsive mbxl">
					</div>
					<div class="col-sm-9 speakerInfo">
						{{ data.speakerInfo | raw }}

						<ul class="socialNetworkLink">
						{% if data.facebook != "" %}
							<li><a href="{{ data.facebook }}">Facebook</a></li>
						{% endif %}

						{% if data.github != "" %}
							<li><a href="{{ data.github }}">Github</a></li>
						{% endif %}

						{% if data.blog != "" %}
							<li><a href="{{ data.blog }}">Blog</a></li>
						{% endif %}

						{% if data.website != "" %}
							<li><a href="{{ data.website }}">Website</a></li>
						{% endif %}
						</ul>
					</div>
				</div>
			</div>
			{% endfor %}

		</div>
	</div>
</div>

{% endblock %}

